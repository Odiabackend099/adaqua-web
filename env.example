# ==== adaqua-web (Vercel) ====
# Public: the browser only ever hits this path on your Next.js app
NEXT_PUBLIC_TTS_URL=/api/tts

# Server-only: your EC2 TTS upstream
TTS_UPSTREAM_URL=http://tts-api.odia.dev
TTS_UPSTREAM_PATH=/voice/synthesize

# Project policy (enforced in code below)
TTS_DEFAULT_FORMAT=mp3
TTS_DEFAULT_VOICE=naija_male_warm
TTS_REQUEST_TIMEOUT_MS=30000
TTS_NO_FALLBACK=true

# OpenAI API Key (required for STT)
OPENAI_API_KEY=YOUR_OPENAI_KEY
OPENAI_STT_MODEL=whisper-1

# Brain API Configuration
ADAQUA_BRAIN_BASE=https://brain-api.odia.dev
ADAQUA_BRAIN_API_KEY=YOUR_BRAIN_API_KEY
